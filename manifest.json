{
  "name": "BurleiDireto",
  "description": "Burle a censura do PasseiDireto e garanta a liberdade do conhecimento. De gra√ßa.",
  "version": "2.0",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "gabriel@verissimo.dev"
    }
  },
  "content_scripts": [
    {
      "js": ["./js/burleidireto.js"],
      "matches": ["https://www.passeidireto.com/*"]
    }
  ],
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "/img/16x16.png",
      "32": "/img/32x32.png",
      "64": "/img/64x64.png",
      "128": "/img/128x128.png"
    }
  },
  "icons": {
    "16": "/img/16x16.png",
    "32": "/img/32x32.png",
    "64": "/img/64x64.png",
    "128": "/img/128x128.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "web_accessible_resources": [
    {
      "matches": ["https://www.passeidireto.com/*"],
      "resources": ["css/styles.css"]
    }
  ]
}
